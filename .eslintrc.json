{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
    // Utiliza Prettier para formatear el código automáticamente (opcional)
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    // Puedes personalizar las reglas de ESLint aquí
    "no-console": "off",
    // Permite el uso de console.log
    "@typescript-eslint/no-var-requires": "off",
    // Permite el uso de require
    "@typescript-eslint/explicit-module-boundary-types": "off"
    // No requiere que se definan los tipos de retorno explícitamente en las funciones
  }
}
